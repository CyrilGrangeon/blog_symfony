{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<h1 class="text-center">Liste des articles</h1>
    <div class="row flex p-5">
        {% for article in articles %}
                <div class="card text-white bg-primary mb-3" >
                    <div class="card-header">Publié le  {{ article.updatedAt|date('d,m,Y') }} à  {{ article.updatedAt|date('d,m,Y') }}</div>
                    <div class="card-body">
                    <h4 class="card-title">{{ article.title }}</h4>
                    <p class="card-text">{{ article.content }}</p>
                    <a class="btn btn-secondary" href="{{ path('article_show', {slug: article.slug  }) }}">Voir l'article</a>
                </div>
            </div>
                
        {% endfor %}
    </div>
{% endblock %}
